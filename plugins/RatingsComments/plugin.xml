<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>
        <!-- This must be equal to the folder name!-->
        <pluginName>RatingsComments</pluginName>
        <!-- nice name to display in pimcore -->
        <pluginNiceName>Rating &amp; Commenting Plugin</pluginNiceName>
        <!-- 64x64px plugin icon-->
        <pluginIcon>/plugins/RatingsComments/static/img/rating-logo.png</pluginIcon>
        <pluginDescription>
            <![CDATA[Incorporates both rating and commenting plugins</a>]]></pluginDescription>
        <!-- Plugin Server URL -->
        <pluginServer>plugins.pimcore.org</pluginServer>
        <!-- Version and Revision are updated by createRevision Script !-->
        <pluginVersion>1.0.0</pluginVersion>
        <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
        <pluginClassName>RatingsComments_Plugin</pluginClassName>
        <!-- include paths relative to plugin-directory -->
        <pluginIncludePaths>
            <path>/RatingsComments/lib</path>
            <path>/RatingsComments/models</path>
        </pluginIncludePaths>
        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>RatingsComments</namespace>
            <namespace>Resource</namespace>
        </pluginNamespaces>
        <!-- js files with path relative to plugin-directory -->
        <pluginJsPaths>
            <path>/RatingsComments/static/js/ratingscommentsplugin.js</path>
            <path>/RatingsComments/static/js/comments.js</path>
            <path>/RatingsComments/static/js/rowexpander.js</path>
        </pluginJsPaths>
        <!-- css files with path relative to plugin-directory -->
        <pluginCssPaths>
            <path>/RatingsComments/static/css/admin.css</path>
        </pluginCssPaths>
    </plugin>
</zend-config>

